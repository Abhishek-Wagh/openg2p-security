<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="openg2p_inherit_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">openg2p.res.config.settings.view.inherit.setup</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="999" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="G2P Encryption Settings" name="g2p_encryption_config_settings">
                    <block title="G2P Encryption Settings">
                        <setting string="Encryption of fields" help="Encryption of the fields is through this option so be careful.">
                            <field name="encrypt_fields"/>
                        </setting>
                    </block>
                    <block title="G2P Decryption Settings">
                        <setting string="Decrption of fields" help="Decryption of the fields is through this option so be careful.">
                            <field name="decrypt_fields"/>
                        </setting>
                    </block>
                </app>
            </xpath>
